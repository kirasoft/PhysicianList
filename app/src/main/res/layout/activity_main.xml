<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ffff714d">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:id="@+id/linear"
        android:background="#c5ffc8af">
        <ListView
            android:layout_width="match_parent"
            android:id="@+id/doctorsList"
            android:layout_height="wrap_content"></ListView>

    </LinearLayout>

    <Button android:layout_below="@id/linear" android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="Sort by Practice" android:id="@+id/sortByPractice"/>
    <Button android:layout_below="@id/sortByPractice" android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="Sort by Name" android:id="@+id/sortByName"/>
    <Button android:layout_below="@id/sortByName" android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="ReverseList" android:id="@+id/reverseList"/>
</RelativeLayout>
